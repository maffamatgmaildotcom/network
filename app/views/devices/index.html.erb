<h1>Devices</h1>

<table id="devices" class="display">
<thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
	<th>Location</th>
    <th>Type</th>
  </tr>
</thead>
<tbody>
<% @devices.each do |device| %>
  <tr>
    <td><%= link_to(device.name, device) %></td>
    <td><%= device.description %></td>
	<td><%= device.location %></td>
    <td><%= device.device_type %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Device', new_device_path %>
